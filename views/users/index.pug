extends ../layout/common.pug

block content
    h1 Users

    a.btn.btn-primary(href="/users/create") New

    form(action="/users/search" method="GET" class="d-flex")
        input(type="text" name="q" class="form-control")
        button(class="btn btn-primary ml-2") Search

    table.table
        tr
            th Avatar
            th Name
            th Phone
            th Action
        each user in users
            tr
                td
                    img(src=user.avatar, alt="", width="50px", height="50px")
                td= user.name
                td= user.phone
                td
                    a.btn.btn-light(href="/users/" + user.id) View